<Page x:Class="PaperFlowWpf.Views.ProfileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PaperFlowWpf.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfileView">

    <Grid Margin="10">
        <!-- Header Section -->
        <Border Background="#3E4A61" CornerRadius="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" >
                <!-- Profile Picture -->
                <Ellipse Width="80" Height="80" Fill="Gray" VerticalAlignment="Center">
                    <Ellipse.OpacityMask>
                        <ImageBrush ImageSource="../Assets/vam.png" />
                    </Ellipse.OpacityMask>
                </Ellipse>

                <!-- User Info -->
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="White" />
                    <TextBlock Text="{Binding Email}" FontSize="14" Foreground="White" />
                    <TextBlock Text="Member since: {Binding CreatedAt, StringFormat='yyyy-MM-dd'}" FontSize="12" Foreground="#BCC6D9" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="0,100,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Info Panel -->
            <StackPanel Grid.Column="0" Background="#F7F9FC" >
                <TextBlock Text="User Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
                <TextBlock Text="Name:" FontSize="14" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Name}" FontSize="14" Margin="0,0,0,10" />
                <TextBlock Text="Email:" FontSize="14" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Email}" FontSize="14" Margin="0,0,0,10" />
                <TextBlock Text="Account Created:" FontSize="14" FontWeight="SemiBold" />
                <TextBlock Text="{Binding CreatedAt, StringFormat='yyyy-MM-dd'}" FontSize="14" />
            </StackPanel>

            <!-- Stats Panel -->
            <StackPanel Grid.Column="1" Background="#FFFFFF" Margin="10,0,0,0">
                <TextBlock Text="Dashboard Stats" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
                <TextBlock Text="Total Papers:" FontSize="14" FontWeight="SemiBold" />
                <TextBlock Text="15" FontSize="14" Margin="0,0,0,10" />
                <TextBlock Text="Total Sources:" FontSize="14" FontWeight="SemiBold" />
                <TextBlock Text="8" FontSize="14" Margin="0,0,0,10" />
                <TextBlock Text="Research Groups Joined:" FontSize="14" FontWeight="SemiBold" />
                <TextBlock Text="5" FontSize="14" />
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Content="Edit Profile" Width="120" Margin="10" />
            <Button Content="Manage Papers" Width="120" Margin="10" />
            <Button Content="View Groups" Width="120" Margin="10" />
        </StackPanel>
    </Grid>


</Page>
