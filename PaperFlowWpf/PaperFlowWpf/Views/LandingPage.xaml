<Page x:Class="PaperFlowWpf.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PaperFlowWpf"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="800"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="LandingPage" Foreground="White">

    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="650" Margin="10">
            <Image Width="200" Height="200" Source="../Assets/elephant.png" HorizontalAlignment="Left"></Image>
            <ui:TextBlock FontTypography="Display" Text="PaperFlow"/>
            <ui:TextBlock TextWrapping="Wrap" FontTypography="Title" Foreground="LightSlateGray" Text="The Ultimate Toolkit for Collaborative Literature Reviews."/>
            <TextBlock TextWrapping="Wrap" Width="500" HorizontalAlignment="Left" Margin="0 5 0 0" Opacity="0.5">The smarter way to read, review, and collaborate on research papers. Paperflow transforms academic teamwork into effortless progress.</TextBlock>
            <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                <Button >Get Invites</Button>
                <Button Margin="10 0 0 0" Background="MediumPurple" Name="startbuttn" Click="startbuttn_Click">Start Exploring</Button>
            </StackPanel>
        </StackPanel>

        

    </Grid>
</Page>
